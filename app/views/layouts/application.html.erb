<!DOCTYPE html>
<html>
  <head>
    <title>SpottyRailsMini</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" rel="stylesheet">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js"> </script>
  </head>

  <body class="body">

  <header class="navbar-nav">

    <% unless current_user.nil? %>
      <%= link_to 'Albums', albums_path, class: 'navbar-link' %>
      <%= link_to 'Songs', songs_path, class: 'navbar-link' %>
      <%= link_to 'Friends', users_path, class: 'navbar-link'  %>
      <%= link_to current_user.username, user_path(current_user), class: 'navbar-link'  %>
    <% end %>

    <% if current_user.nil? %>
      <%= link_to 'Sign In', login_path %>
      <%= link_to 'Sign Up', sign_up_path %>
    <% end %>

  </header>

  <% flash.each do |message_type, message| %>
    <div class="alert alert-<%= message_type %>"><%= message %></div>
  <% end %>

  <%= yield %>
  </body>
</html>
